<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>ReklamTack.nu | Direktreklam på dina villkor</title>
    @Styles.Render("~/Content/css")
    <link href="~/App/css/angularjsStyle.css" rel="stylesheet" />
    <link href="~/App/css/printStyle.css" rel="stylesheet" media="print" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top" style="background-color: rgb(167, 220, 248);">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("ReklamTack.nu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a href="/"><img src="~/App/img/ReklamTack_logo_color_fixed.png" style="width: 259px; height: 93px;" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <div ng-cloak ng-controller="userInfo">
                    <div class="navbar-text" style="padding-top: 2.8em;">
                        <div ng-cloak ng-show="displayLogOut">
                            <div>
                                <span><a style="cursor: pointer; color: black; margin-right: 1em;" ng-click="changePass()">Byt lösenord</a></span>
                                <span ng-show="currentRole == 'Admin'"><a style="cursor: pointer; color: black; margin-right: 1em;" ng-href="#!/Admin">Admin Kontroller</a></span>
                            </div>
                        </div>
                    </div>
                    <div class="navbar-text pull-right" style="padding-top: 2em;">
                        <div ng-cloak style="color: black; font-size: 1.5em;">
                            <span style="margin-right: .5em; color: rgb(73, 142, 191); font-size: 9pt;">{{cUser}}</span>
                            <a ng-click="logOut()" ng-show="displayLogOut" style="background-color: rgb(73, 142, 191); color: black;" class="btn btn-sm">
                                <span class="glyphicon glyphicon-log-out"></span> Logga ut
                            </a>
                            <span ng-show="!displayLogOut">
                                <a style="color: rgb(170, 212, 242);" ng-href="#!/Login"><span class="glyphicon glyphicon-log-in"></span></a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ReklamTack.nu i samarbete med <span>
                    <img class="footerLogoImg" src="https://www.sdr.se/images/main-logo.png" />
                </span>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/ocLazyLoad.min.js"></script>

    @if (Context.IsDebuggingEnabled)
    {
        <script src="~/sadhjgHFDXhghIYFVUrfgtjhpoPOIHUONerfgobui/app.js"></script>
        <script src="~/sadhjgHFDXhghIYFVUrfgtjhpoPOIHUONerfgobui/accountController.js"></script>
        <script src="~/sadhjgHFDXhghIYFVUrfgtjhpoPOIHUONerfgobui/commonServices.js"></script>
        <script src="~/sadhjgHFDXhghIYFVUrfgtjhpoPOIHUONerfgobui/startController.js"></script>
        <script src="~/sadhjgHFDXhghIYFVUrfgtjhpoPOIHUONerfgobui/userAccount.js"></script>
    }
    else
    {
        <script src="~/App/js/app.js"></script>
        <script src="~/App/js/accountController.js"></script>
        <script src="~/App/js/commonServices.js"></script>
        <script src="~/App/js/startController.js"></script>
        <script src="~/App/js/userAccount.js"></script>
    }

    @{
        if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <script src="~/App/js/adminController.js"></script>
        }
    }

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
