<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>ReklamTack.nu | Direktreklam på dina villkor</title>
    @Styles.Render("~/Content/css")
    <link href="~/App/css/angularjsStyle.css" rel="stylesheet" />
    <link href="~/App/css/printStyle.css" rel="stylesheet" media="print" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ReklamTack.nu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>*@
                <div ng-cloak ng-controller="userInfo">
                    <div class="navbar-text">
                        <div ng-cloak ng-show="displayLogOut">
                            <ul style="font-size: 1em; list-style-type: none;">
                                <li><a style="cursor: pointer;" ng-click="changePass()">Byt lösenord</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="navbar-text pull-right">
                        <div ng-cloak style="color: orange; font-size: 1.5em;">
                            <span style="margin-right: .5em;">{{cUser}}</span>
                            <a ng-click="logOut()" ng-show="displayLogOut" style="background-color: dimgrey; color: orange;" class="btn btn-sm">
                                <span class="glyphicon glyphicon-log-out"></span> Logga ut
                            </a>
                            <span>
                                <a style="color: #333333;" ng-href="#!/Login"><span class="glyphicon glyphicon-log-in"></span></a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - RekalmTack.nu i samarbete med <span>
                    <img class="footerLogoImg" src="https://www.sdr.se/images/main-logo.png" />
                    @*<img class="footerLogoImg" src="https://www.ica.se/imagevaultfiles/id_161956/cf_259/ica_supermarket_logotyp_rod_rgb_bhs.png?" />*@
                    <img class="footerLogoImg" src="~/App/img/Ica-Logo-TU.svg" />
                </span>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/App/js/app.js"></script>

    <script src="~/App/js/commonServices.js"></script>
    <script src="~/App/js/userAccount.js"></script>

    <script src="~/App/js/accountController.js"></script>
    <script src="~/App/js/startController.js"></script>
    <script src="~/App/js/adminController.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
