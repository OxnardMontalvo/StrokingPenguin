<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>ReklamTack.nu | Direktreklam på dina villkor</title>
    @Styles.Render("~/Content/css")
    <link href="~/App/css/angularjsStyle.css" rel="stylesheet" />
    <link href="~/App/css/printStyle.css" rel="stylesheet" media="print" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ReklamTack.nu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div ng-cloak ng-controller="userInfo">
                    <div class="navbar-text">
                        <div ng-cloak ng-show="displayLogOut">
                            <div>
                                <span><a style="cursor: pointer; color: orange; margin-right: 1em;" ng-click="changePass()">Byt lösenord</a></span>
                                <span ng-show="currentRole == 'Admin'"><a style="cursor: pointer; color: orange; margin-right: 1em;" ng-href="#!/Admin">Användarlista</a></span>
                                <span ng-show="currentRole == 'Admin'"><a style="cursor: pointer; color: orange; margin-right: 1em;" ng-href="#!/AdminCreate">Skapa Kategorier & Reklamblad</a></span>
                            </div>
                        </div>
                    </div>
                    <div class="navbar-text pull-right">
                        <div ng-cloak style="color: orange; font-size: 1.5em;">
                            <span style="margin-right: .5em;">{{cUser}} <span ng-if="cUser" class="glyphicon glyphicon-user"></span></span>
                            <a ng-click="logOut()" ng-show="displayLogOut" style="background-color: dimgrey; color: orange;" class="btn btn-sm">
                                <span class="glyphicon glyphicon-log-out"></span> Logga ut
                            </a>
                            @*<span ng-show="!displayLogOut">
                                <a style="color: #333333;" ng-href="#!/Login"><span class="glyphicon glyphicon-log-in"></span></a>
                            </span>*@
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - RekalmTack.nu i samarbete med <span>
                    <img class="footerLogoImg" src="https://www.sdr.se/images/main-logo.png" />
                </span>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/ocLazyLoad.min.js"></script>

    @if (Context.IsDebuggingEnabled)
    {
        <script src="~/sadhjgHFDXhghIYFVUrfgtjhpoPOIHUONerfgobui/app.js"></script>
        <script src="~/sadhjgHFDXhghIYFVUrfgtjhpoPOIHUONerfgobui/accountController.js"></script>
        <script src="~/sadhjgHFDXhghIYFVUrfgtjhpoPOIHUONerfgobui/commonServices.js"></script>
        <script src="~/sadhjgHFDXhghIYFVUrfgtjhpoPOIHUONerfgobui/startController.js"></script>
        <script src="~/sadhjgHFDXhghIYFVUrfgtjhpoPOIHUONerfgobui/userAccount.js"></script>
        
        if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <script src="~/sadhjgHFDXhghIYFVUrfgtjhpoPOIHUONerfgobui/adminController.js"></script>
        }
        if (User.Identity.IsAuthenticated && User.IsInRole("User"))
        {
            <script src="~/sadhjgHFDXhghIYFVUrfgtjhpoPOIHUONerfgobui/userCtrl.js"></script>
        }
    }
    else
    {
        <script src="~/App/js/app.js"></script>
        <script src="~/App/js/accountController.js"></script>
        <script src="~/App/js/commonServices.js"></script>
        <script src="~/App/js/startController.js"></script>
        <script src="~/App/js/userAccount.js"></script>
        
        if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <script src="~/App/js/adminController.js"></script>
        }
        if (User.Identity.IsAuthenticated && User.IsInRole("User"))
        {
            <script src="~/App/js/userCtrl.js"></script>
        }
    }

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
